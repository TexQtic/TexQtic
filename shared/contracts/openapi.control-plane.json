{
  "openapi": "3.0.3",
  "info": { "title": "TexQtic Control Plane API", "version": "0.2.0" },
  "paths": {
    "/api/control/tenants": {
      "get": { "summary": "List tenants", "responses": { "200": { "description": "OK" } } }
    },
    "/api/control/tenants/provision": {
      "post": {
        "summary": "Provision a new tenant (admin only)",
        "description": "Admin-initiated tenant creation. This is the ONLY way to create tenants - no public signup.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "slug", "type", "ownerEmail", "ownerPassword"],
                "properties": {
                  "name": { "type": "string" },
                  "slug": { "type": "string" },
                  "type": { "type": "string", "enum": ["B2B", "B2C", "INTERNAL"] },
                  "ownerEmail": { "type": "string", "format": "email" },
                  "ownerPassword": { "type": "string", "minLength": 6 }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Tenant provisioned successfully" } }
      }
    },
    "/api/control/tenants/{id}": {
      "get": {
        "summary": "Get tenant details",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/control/audit-logs": {
      "get": { "summary": "List audit logs", "responses": { "200": { "description": "OK" } } }
    },
    "/api/control/feature-flags": {
      "get": {
        "summary": "List all feature flags",
        "description": "Admin-only endpoint to retrieve all feature flags",
        "responses": {
          "200": {
            "description": "Feature flags retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "flags": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "key": { "type": "string" },
                              "enabled": { "type": "boolean" },
                              "description": { "type": "string" },
                              "createdAt": { "type": "string", "format": "date-time" },
                              "updatedAt": { "type": "string", "format": "date-time" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/control/feature-flags/{key}": {
      "put": {
        "summary": "Upsert a feature flag",
        "description": "Admin-only endpoint to create or update a feature flag. Wave 5A implementation.",
        "parameters": [
          { "name": "key", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["enabled"],
                "properties": {
                  "enabled": { "type": "boolean" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Feature flag upserted successfully"
          }
        }
      }
    }
  }
}
