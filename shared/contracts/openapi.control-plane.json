{
  "openapi": "3.0.3",
  "info": {
    "title": "TexQtic Control Plane API",
    "version": "0.3.0",
    "description": "Admin-facing control plane API for TexQtic multi-tenant SaaS platform. All endpoints require admin JWT authentication."
  },
  "servers": [
    { "url": "http://localhost:3001", "description": "Local development" }
  ],
  "components": {
    "securitySchemes": {
      "adminJwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Admin JWT token obtained from /api/auth/admin/login"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "enum": [false] },
          "error": {
            "type": "object",
            "properties": {
              "code": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "security": [{ "adminJwt": [] }],
  "paths": {
    "/api/control/tenants": {
      "get": {
        "summary": "List all tenants",
        "description": "Returns all tenants with membership counts and related data",
        "responses": {
          "200": { "description": "Tenants retrieved successfully" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/tenants/provision": {
      "post": {
        "summary": "Provision a new tenant (admin only)",
        "description": "Admin-initiated tenant creation. This is the ONLY way to create tenants - no public signup.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "slug", "type", "ownerEmail", "ownerPassword"],
                "properties": {
                  "name": { "type": "string" },
                  "slug": { "type": "string" },
                  "type": { "type": "string", "enum": ["B2B", "B2C", "INTERNAL"] },
                  "ownerEmail": { "type": "string", "format": "email" },
                  "ownerPassword": { "type": "string", "minLength": 6 }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Tenant provisioned successfully" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Provisioning failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/tenants/{id}": {
      "get": {
        "summary": "Get tenant details",
        "description": "Returns detailed tenant information including memberships, domains, branding, and AI budget",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" }, "description": "Tenant ID" }
        ],
        "responses": {
          "200": { "description": "Tenant details retrieved" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "404": { "description": "Tenant not found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/audit-logs": {
      "get": {
        "summary": "List all audit logs",
        "description": "Returns audit logs across all tenants or filtered by tenant/action. Admin-only.",
        "parameters": [
          { "name": "tenantId", "in": "query", "schema": { "type": "string", "format": "uuid" }, "description": "Filter by tenant ID" },
          { "name": "action", "in": "query", "schema": { "type": "string" }, "description": "Filter by action" },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "minimum": 1, "maximum": 200, "default": 50 }, "description": "Results limit" }
        ],
        "responses": {
          "200": { "description": "Audit logs retrieved" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/events": {
      "get": {
        "summary": "List immutable event logs",
        "description": "Query event log backbone with filtering and cursor pagination. Doctrine v1.4 event read surface.",
        "parameters": [
          { "name": "tenant_id", "in": "query", "schema": { "type": "string", "format": "uuid" }, "description": "Filter by tenant ID" },
          { "name": "event_name", "in": "query", "schema": { "type": "string", "maxLength": 100 }, "description": "Filter by event name" },
          { "name": "from", "in": "query", "schema": { "type": "string", "format": "date-time" }, "description": "Filter events after this timestamp" },
          { "name": "to", "in": "query", "schema": { "type": "string", "format": "date-time" }, "description": "Filter events before this timestamp" },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "minimum": 1, "maximum": 200, "default": 50 }, "description": "Results per page" },
          { "name": "cursor", "in": "query", "schema": { "type": "string", "format": "uuid" }, "description": "Pagination cursor (event ID)" }
        ],
        "responses": {
          "200": { "description": "Events retrieved with nextCursor" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Query failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/feature-flags": {
      "get": {
        "summary": "List all feature flags",
        "description": "Admin-only endpoint to retrieve all feature flags",
        "responses": {
          "200": {
            "description": "Feature flags retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "flags": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "key": { "type": "string" },
                              "enabled": { "type": "boolean" },
                              "description": { "type": "string" },
                              "createdAt": { "type": "string", "format": "date-time" },
                              "updatedAt": { "type": "string", "format": "date-time" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/feature-flags/{key}": {
      "put": {
        "summary": "Upsert a feature flag",
        "description": "Admin-only endpoint to create or update a feature flag. Wave 5A implementation.",
        "parameters": [
          { "name": "key", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["enabled"],
                "properties": {
                  "enabled": { "type": "boolean" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Feature flag upserted successfully" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Upsert failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/marketplace/cart-summaries": {
      "get": {
        "summary": "List marketplace cart summaries",
        "description": "Read-only projection of cart summaries with filtering and pagination. Admin-only cross-tenant visibility.",
        "parameters": [
          { "name": "tenant_id", "in": "query", "schema": { "type": "string", "format": "uuid" }, "description": "Filter by tenant ID (omit to see all tenants)" },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "minimum": 1, "maximum": 200, "default": 50 }, "description": "Results per page" },
          { "name": "cursor", "in": "query", "schema": { "type": "string", "format": "uuid" }, "description": "Pagination cursor (cart summary ID)" },
          { "name": "updated_after", "in": "query", "schema": { "type": "string", "format": "date-time" }, "description": "Filter by last_updated_at >= ISO date" }
        ],
        "responses": {
          "200": { "description": "Cart summaries retrieved with pagination metadata" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Fetch failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/marketplace/cart-summaries/{cart_id}": {
      "get": {
        "summary": "Get cart summary by cart ID",
        "description": "Retrieve a single cart summary from the projection table. Admin bypasses tenant isolation.",
        "parameters": [
          { "name": "cart_id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" }, "description": "Cart ID" }
        ],
        "responses": {
          "200": { "description": "Cart summary retrieved" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "404": { "description": "Cart summary not found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Fetch failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/finance/payouts/{payout_id}/approve": {
      "post": {
        "summary": "Approve payout (admin only)",
        "description": "Wave 5B: Record admin approval decision as immutable event (no payout execution).",
        "parameters": [
          { "name": "payout_id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } },
          { "name": "Idempotency-Key", "in": "header", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reason": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Approval recorded (new event)" },
          "200": { "description": "Idempotent replay (existing event returned)" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error (missing Idempotency-Key or invalid body)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Approval failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/finance/payouts/{payout_id}/reject": {
      "post": {
        "summary": "Reject payout (admin only)",
        "description": "Wave 5B: Record admin rejection decision as immutable event.",
        "parameters": [
          { "name": "payout_id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } },
          { "name": "Idempotency-Key", "in": "header", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reason": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Rejection recorded (new event)" },
          "200": { "description": "Idempotent replay (existing event returned)" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error (missing Idempotency-Key or invalid body)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Rejection failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/compliance/requests/{request_id}/approve": {
      "post": {
        "summary": "Approve compliance request (admin only)",
        "description": "Wave 5B: Record admin approval decision as immutable event.",
        "parameters": [
          { "name": "request_id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } },
          { "name": "Idempotency-Key", "in": "header", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reason": { "type": "string" },
                  "notes": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Approval recorded (new event)" },
          "200": { "description": "Idempotent replay (existing event returned)" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error (missing Idempotency-Key or invalid body)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Approval failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/compliance/requests/{request_id}/reject": {
      "post": {
        "summary": "Reject compliance request (admin only)",
        "description": "Wave 5B: Record admin rejection decision as immutable event.",
        "parameters": [
          { "name": "request_id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } },
          { "name": "Idempotency-Key", "in": "header", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reason": { "type": "string" },
                  "notes": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Rejection recorded (new event)" },
          "200": { "description": "Idempotent replay (existing event returned)" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error (missing Idempotency-Key or invalid body)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Rejection failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/disputes/{dispute_id}/resolve": {
      "post": {
        "summary": "Resolve dispute (admin only)",
        "description": "Wave 5B: Record admin resolution decision as immutable event.",
        "parameters": [
          { "name": "dispute_id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } },
          { "name": "Idempotency-Key", "in": "header", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "resolution": { "type": "string" },
                  "notes": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Resolution recorded (new event)" },
          "200": { "description": "Idempotent replay (existing event returned)" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error (missing Idempotency-Key or invalid body)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Resolution failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/api/control/disputes/{dispute_id}/escalate": {
      "post": {
        "summary": "Escalate dispute (admin only)",
        "description": "Wave 5B: Record admin escalation decision as immutable event.",
        "parameters": [
          { "name": "dispute_id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } },
          { "name": "Idempotency-Key", "in": "header", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "resolution": { "type": "string" },
                  "notes": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Escalation recorded (new event)" },
          "200": { "description": "Idempotent replay (existing event returned)" },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "422": { "description": "Validation error (missing Idempotency-Key or invalid body)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Escalation failed", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    }
  }
}
