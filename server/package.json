{
  "name": "texqtic-platform-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:preflight": "tsx scripts/dev-preflight.ts",
    "dev": "npm run dev:preflight && tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "replay:marketplace-cart": "tsx src/events/replay/replay-marketplace-cart.ts",
    "projection:health:marketplace-cart": "tsx src/events/health/marketplace-cart-projection-health.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:rls": "psql $DATABASE_URL -f prisma/rls.sql",
    "db:harden": "tsx prisma/apply-hardening.ts",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@google/generative-ai": "^0.21.0",
    "@prisma/client": "6.1.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.18.0",
    "prisma": "6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
